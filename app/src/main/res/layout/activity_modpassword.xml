<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModpasswordActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/full_border"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/full_border"
            android:text="@string/비밀번호변경"
            android:textColor="@color/Black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editText_curpw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/full_border"
            android:ems="10"
            android:hint="@string/현재비밀번호"
            android:inputType="textPassword"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_pw1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/full_border"
            android:ems="10"
            android:hint="@string/새비밀번호"
            android:inputType="textPassword"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_pw2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/full_border"
            android:ems="10"
            android:hint="@string/새비밀번호재입력"
            android:inputType="textPassword"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorKyunghee"
                android:onClick="onApplyClicked"
                android:text="@string/적용"
                android:textColor="@color/White" />

            <Button
                android:id="@+id/button31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorKyunghee"
                android:onClick="OnCancelClicked"
                android:text="@string/취소"
                android:textColor="@color/White" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>