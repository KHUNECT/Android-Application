<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:background="@drawable/roundedborder"
                android:id="@+id/글정보레이아웃"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/틈"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_게시판이름"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_gaesimul"
                    android:gravity="center"
                    android:text="@string/게시판이름"
                    android:textColor="@color/colorKyunghee"
                    android:textSize="30sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/text_작성자정보"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_gaesimul"
                    android:text="@string/작성자정보" />

                <TextView
                    android:id="@+id/text_제목"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/제목"
                    android:textColor="@android:color/black"
                    android:textColorHighlight="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@color/gray_notselected" />

                    <TextView
                        android:id="@+id/text_내용"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/내용2"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/틈7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:background="@drawable/roundedborder"
                android:id="@+id/댓글정보레이아웃"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/틈6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView

                    android:id="@+id/text_댓글"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_gaesimul"
                    android:gravity="left"
                    android:text="@string/댓글"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    style="?android:borderlessButtonStyle"
                    android:background="@drawable/button_gaesimul"
                    android:id="@+id/user1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Button" />

                <Button
                    style="?android:borderlessButtonStyle"
                    android:background="@drawable/button_gaesimul"
                    android:id="@+id/user2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Button" />

                <Button
                    style="?android:borderlessButtonStyle"
                    android:background="@drawable/button_gaesimul"
                    android:id="@+id/user3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Button" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>