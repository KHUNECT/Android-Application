<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyprofileActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/full_border"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/button_upload2"
        app:layout_constraintEnd_toStartOf="@+id/button_upload2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/profile"
            app:srcCompat="@drawable/avatar" />
    </LinearLayout>

    <Button
        android:id="@+id/button_upload2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/button_gaesimul"
        android:onClick="onUploadButtonClicked"
        android:text="@string/파일선택"
        android:textColor="@color/gray_notselected" />
</android.support.constraint.ConstraintLayout>