<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

        <ScrollView
            android:scrollbars="none"
            android:id="@+id/scrollView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/게시판모음"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_klas"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onKLASClicked"
                        android:text="@string/KLAS"
                        android:textColor="@color/gray_notselected" />

                    <TextView
                        android:id="@+id/틈0"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/로그아웃"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onLogoutButtonClicked"
                        android:text="@string/로그아웃"
                        android:textColor="#f08c8484" />

                    <Button
                        android:id="@+id/검색"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:drawable/ic_menu_search"
                        android:onClick="onSearchButtonClicked"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <TextView
                    android:id="@+id/틈3"
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:id="@+id/핫게시물"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedborder"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp">

                    <TextView
                        android:id="@+id/text_hot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/레이아웃설명테두리"
                        android:text="@string/뜨거운게시물"
                        android:textColor="@color/colorKyunghee"
                        android:textSize="@dimen/레이아웃설명" />

                    <Button
                        android:id="@+id/button4"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_gaesimul"
                        android:gravity="left|center"
                        android:onClick="onPostClicked"
                        android:text="  [알바] 상하차 하실 분?" />

                    <Button
                        android:id="@+id/button5"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_gaesimul"
                        android:gravity="left|center"
                        android:text="  [스터디] 할리스 자리 있나요~" />

                    <Button
                        android:id="@+id/button6"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_gaesimul"
                        android:gravity="left|center"
                        android:text="  [취미] 롤하러 가쉴?" />

                    <Button
                        android:id="@+id/button7"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_gaesimul"
                        android:gravity="left|center"
                        android:text="  [동아리] 빛사냥 연극회" />

                    <Button
                        android:id="@+id/button_뜨게더보기"
                        android:onClick="onHotMoreButtonClicked"
                        style="?android:attr/buttonBarButtonStyle"
                        android:textColor="@color/colorKyunghee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/더보기" />

                </LinearLayout>

                <TextView
                    android:id="@+id/틈4"
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:id="@+id/내수업게시판"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundedborder"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="295dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/레이아웃설명테두리"
                        android:text="@string/내수업새소식"
                        android:textColor="@color/colorKyunghee"
                        android:textSize="@dimen/레이아웃설명" />

                    <Button
                        android:id="@+id/button10"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_gaesimul"
                        android:gravity="left|center"
                        android:text="  [컴퓨터구조] 과제 어디까지 였나요?" />

                    <Button
                        android:id="@+id/button11"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_gaesimul"
                        android:gravity="left|center"
                        android:text="  [소프트웨어적 사유] 시험장소 안내" />

                    <Button
                        android:id="@+id/button12"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_gaesimul"
                        android:gravity="left|center"
                        android:text="  [알고리즘 분석] 중간고사 시험 성적 안내" />

                    <Button
                        android:id="@+id/button13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Button"
                        android:background="@drawable/button_gaesimul"
                        style="?android:attr/borderlessButtonStyle" />

                    <Button
                        android:id="@+id/button_내수업더보기"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickedMyclassButton"
                        android:text="@string/더보기" />

                </LinearLayout>

                <TextView
                    android:id="@+id/틈2"
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:id="@+id/장터게시판새소식"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundedborder"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="295dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/레이아웃설명테두리"
                        android:text="@string/장터새소식"
                        android:textColor="@color/colorKyunghee"
                        android:textSize="@dimen/레이아웃설명" />

                    <Button
                        android:id="@+id/button15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Button"
                        android:background="@drawable/button_gaesimul"
                        style="?android:attr/borderlessButtonStyle" />

                    <Button
                        android:id="@+id/button16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Button"
                        android:background="@drawable/button_gaesimul"
                        style="?android:attr/borderlessButtonStyle" />

                    <Button
                        android:id="@+id/button17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Button"
                        android:background="@drawable/button_gaesimul"
                        style="?android:attr/borderlessButtonStyle" />

                    <Button
                        android:id="@+id/button18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Button"
                        android:background="@drawable/button_gaesimul"
                        style="?android:attr/borderlessButtonStyle" />

                    <Button
                        android:id="@+id/button_장터더보기"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickedTradeButton"
                        android:text="@string/더보기" />
                </LinearLayout>

                <TextView
                    android:id="@+id/틈5"
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:id="@+id/아르바이트"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundedborder"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="295dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/레이아웃설명테두리"
                        android:text="@string/아르바이트새소식"
                        android:textColor="@color/colorKyunghee"
                        android:textSize="@dimen/레이아웃설명" />

                    <Button
                        android:id="@+id/button20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Button"
                        android:background="@drawable/button_gaesimul"
                        style="?android:attr/borderlessButtonStyle" />

                    <Button
                        android:id="@+id/button21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Button"
                        android:background="@drawable/button_gaesimul"
                        style="?android:attr/borderlessButtonStyle" />

                    <Button
                        android:id="@+id/button22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Button"
                        android:background="@drawable/button_gaesimul"
                        style="?android:attr/borderlessButtonStyle" />

                    <Button
                        android:id="@+id/button23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Button"
                        android:background="@drawable/button_gaesimul"
                        style="?android:attr/borderlessButtonStyle" />

                    <Button
                        android:id="@+id/button_알바더보기"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onAlbaButtonClicked"
                        android:text="@string/더보기" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:background="@drawable/layout_topborder"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/Homebutton"
                style="?android:borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/홈"
                android:textColor="@color/colorKyunghee" />

            <Button
                android:id="@+id/Classbutton"
                style="?android:borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClickedMyclassButton"
                android:text="@string/내강의"
                android:textColor="@color/gray_notselected" />

            <Button
                android:id="@+id/Togetherbutton"
                style="?android:borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClickedTogetherButton"
                android:text="@string/함께해요"
                android:textColor="@color/gray_notselected" />

            <Button
                android:id="@+id/Adsbutton"
                style="?android:borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClickedAdsButton"
                android:text="@string/홍보"
                android:textColor="@color/gray_notselected" />

            <Button
                android:id="@+id/Tradebutton"
                style="?android:borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClickedTradeButton"
                android:text="@string/거래"
                android:textColor="@color/gray_notselected" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>